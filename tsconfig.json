{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      // Logic
      "@typing/*": [
        "src/logic/typing/*"
      ],
      "@stores/*": [
        "src/logic/stores/*"
      ],
      "@icons/*": [
        "src/assets/icons/*"
      ],
      // UI
      "@atoms/astro/*": [
        "src/ui/atoms/astro/*"
      ],
      "@atoms": [
        "src/ui/atoms/index.ts"
      ],
      "@lstyles/*": [
        "src/ui/styles/layouts/*"
      ],
      "@pstyles/*": [
        "src/ui/styles/pages/*"
      ],
      "@styles": [
        "src/ui/styles/Globals.scss"
      ],
    }
  }
}